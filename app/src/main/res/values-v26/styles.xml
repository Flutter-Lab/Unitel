<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="service_button_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:textColor">@color/dark_1</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/custom_button1</item>
    </style>


    <style name="buttonStyle_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/custom_button_small</item>
    </style>


</resources>